<odoo>
    <record id="car_model_inherit_product_product_form_view" model="ir.ui.view">
        <field name="name">car.model.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='name']" position="attributes">
                <attribute name="string">Car Model</attribute>
            </xpath>

            <xpath expr="//div[@class='d-flex']/field[@class='text-break']" position="attributes">
                <attribute name="placeholder">e.g. Range Rover</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='purchase']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='inventory']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='invoicing']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
    
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
    
            <xpath expr="//field[@name='l10n_in_hsn_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
    

            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="car_type" placeholder="Select" />
            </xpath>
            
            <xpath expr="//field[@name='detailed_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='sale_ok']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='product_tooltip']" position="after">
                <field name="owner_id" />
            </xpath>

            <xpath expr="//field[@name='product_tooltip']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//label[@for='name']" position="before">
                <h1>
                    <field name="car_reference" />
                </h1>
            </xpath>

            <xpath expr="//label[@for='purchase_ok']" position="after">
                <button name="set_can_be_purchased_dialog_box" type="object">Toggle Button</button>
            </xpath>
            


        </field>
    </record>

    <record id="car_model_inherit_product_product_action_id" model="ir.actions.act_window">
        <field name="name">car.model.action</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{"default_purchase_ok": False}</field>
    </record>
</odoo>