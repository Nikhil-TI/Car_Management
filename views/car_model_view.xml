<odoo>
    <record id="car_model_inherit_product_product_form_view" model="ir.ui.view">
        <field name="name">car.model.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='name']" position="attributes">
                <attribute name="string">Car Model</attribute>
            </xpath>

            <xpath expr="//div[@class='d-flex']/field[@class='text-break']" position="attributes">
                <attribute name="placeholder">e.g. Range Rover</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='purchase']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='inventory']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='invoicing']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            
        </field>
    </record>

    <record id="car_model_inherit_product_product_action_id" model="ir.actions.act_window">
        <field name="name">car.model.action</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>