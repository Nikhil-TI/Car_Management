<odoo>
  <record id="people_inherit_res_partner_form_view" model="ir.ui.view">
    <field name="name">People</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="before">
        <group>
          <field name="barcode" help="Click on generate if 0" />
          <button name="set_barcode" type="object" string="Generate" context="{'using_button': True}" />
          <button name="check_barcode_origin" type="object" string="Check barcode origin" />
        </group>
      </xpath>

      <!-- email -> before -->
      <xpath expr="//field[@name='is_blacklisted']" position="after">
        <field name="isOwner" help="Have you registered a car to be rented?" />
      </xpath>

      <xpath expr="//notebook" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='mobile']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='category_id']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='function']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='title']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <!-- remove company name  -->
      <xpath expr="//div[@class='o_row']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='l10n_in_gst_treatment']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//label[@for='vat']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//div[@name='vat_vies_container']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='l10n_in_pan']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='company_type']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='isOwner']" position="after">
        <button string="Change Value" name="change_value" type="object" />
      </xpath>

      <xpath expr="//field[@name='isOwner']" position="after">
        <button string="Create Value" name="create_values" type="object" />
      </xpath>



      

      <xpath expr="//notebook" position="before">
            <group>
                <field name="car_id" />
            </group>
      </xpath>
    </field>
  </record>
</odoo>
