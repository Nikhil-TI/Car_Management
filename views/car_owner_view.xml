<odoo>
    <record id="car_owner_inherit_res_partner_form_view" model="ir.ui.view">
        <field name="name">Car Owner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
           
           <xpath expr="//sheet/notebook" position="before">
           <group>
                <field name="barcode" help="Click on generate if 0" />
                <button name="set_barcode" type="object" string="Generate Barcode" />
           </group>
           </xpath>
            <!-- email -> before -->
           <xpath expr="//field[@name='is_blacklisted']" position="after">
                 
                <field name="isOwner" help="Have you registered a car to be rented?" />
           </xpath>
            
        </field>
    </record>

