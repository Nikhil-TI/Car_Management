<odoo>
    <record id="car_owner_inherit_res_partner_form_view" model="ir.ui.view">
        <field name="name">Car Owner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- <xpath expr="//header" position="inside">
            <button name="_set_barcode_" type="object" string='Set Barcode'></button>
            </xpath> -->
            <notebook position="before">
            <field name="barcode" />
            <button name="set_barcode" type="object" string="Set Barcode"/>
            </notebook>
           
            
        </field>
    </record>
    <record id="car_owner_inherit_res_partner_tree_view" model="ir.ui.view">
        <field name="name">Car Owner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            
            <xpath expr="//tree" position="inside">
            <header>
            <button name="set_barcode" type="object" string='Set Barcode'></button>
            </header>
            </xpath>
            <!-- <xpath expr="//header" position="inside">
            <button name="_set_barcode_" type="object" string="Set Barcode"></button>
            </xpath> -->
            <xpath expr="//field[@name='email']" postion="after">
            <field name="barcode" />
        
            </xpath>
            
        </field>
    </record>

   

    <menuitem id="car_management_menu" name="Vroom Vroom - Car Rental" />

    <menuitem id="res_partner_menu" name="Car Owner" parent="car_management_menu" action="account.res_partner_action_customer" />

</odoo>