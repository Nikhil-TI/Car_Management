<odoo>
    <template id="CRM_template_id">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="padding: 20px; background-color: #f1f1f1;">
                        <!-- Grouped Information Section -->
                        <div style="padding: 10px; margin-bottom: 20px; border-radius: 5px;">
                            <div style="display: flex; align-items: center; justify-content: space-between;">
                                <div>
                                    <p style="color: #4c4c4c;">
                                        <strong>Car Model: </strong>
                                        <span t-field="property.name" />
                                    </p>
                                <div style="text-align: right; margin-top: -10px;">
                                    <t t-if="property.barcode">
                                        <img t-att-src="'/report/barcode/QR/%s' % property.barcode" alt="Barcode is Here" style="width: 80px; height: 30px; margin-bottom: 5px;" />
                                        <div>
                                            <strong>Barcode:</strong>
                                            <span t-field="property.barcode" />
                                        </div>
                                    </t>
                                </div>
                                    <p>
                                        <strong>Internal Reference:</strong>
                                        <span t-field="property.car_reference" />
                                    </p>
                                    <t t-if="property.owner_id">
                                        <p>
                                            <strong>Owner:</strong>
                                            <span t-field="property.owner_id.name" />
                                        </p>
                                    </t>
                                    <p>
                                        <strong>Category:</strong>
                                        <span t-field="property.car_type" />
                                    </p>
                                </div>
                            </div>

                            <p>
                                <strong>Product Template Tags:</strong>
                                <span t-foreach="property.product_tag_ids" t-as="tag">
                                    <span style="background-color: #cccccc; padding: 2px 8px; margin-right: 5px; border-radius: 5px; color: black;">
                                        <t t-out="tag.name" />
                                    </span>
                                </span>
                            </p>
                            <p>
                                <strong>Company:</strong>
                                <span t-field="property.company_id.name" />
                            </p>
                            <p>
                                <strong>Purchasable:</strong>
                                <span t-if="property.purchase_ok">Yes</span>
                                <span t-if="not property.purchase_ok">No</span>
                            </p>
                        </div>

                        <!-- Sales Information Section with Table -->
                        <div style="background-color: #ffffff; padding: 10px; margin-bottom: 20px; border-radius: 5px;">
                            <h2 style="font-size: 20px; color: #4c4c4c; border-bottom: 1px solid #4c4c4c;">Sales Information</h2>
                            <p>
                                <strong>Invoicing Policy:</strong>
                                <span t-if="property.invoice_policy == 'order'">Ordered quantities</span>
                                <span t-if="property.invoice_policy == 'delivery'">Delivered quantities</span>
                            </p>
                            <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                                <thead>
                                    <tr style="background-color: #4c4c4c; color: white;">
                                        <th style="padding: 5px; border: 1px solid #ddd;">Tax Name</th>
                                        <th style="padding: 5px; border: 1px solid #ddd;">Tax Percentage</th>
                                        <th style="padding: 5px; border: 1px solid #ddd;">Sales Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="property.taxes_id" t-as="tax">
                                        <tr>
                                            <td style="padding: 5px; border: 1px solid #ddd;">
                                                <span t-out="tax.name"/>
                                            </td>
                                            <td style="padding: 5px; border: 1px solid #ddd;">
                                                <span t-out="tax.amount"/>%
                                            </td>
                                            <td style="padding: 5px; border: 1px solid #ddd;">
                                                <span t-field="property.list_price" />
                                                <span>(Incl. Taxes)</span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Note at the Bottom -->
                        <div style="margin-top: 20px; text-align: center; font-size: 16px; color: #4c4c4c;">
                            <strong>Happy and Safe Ride</strong>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
